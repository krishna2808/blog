[Unit]
Description=gunicorn daemon
Requires=gunicorn.socket
After=network.target

[Service]
User=root
Group=www-data
WorkingDirectory=/app/blog-proejct/blog
ExecStart=/app/blog-project/venv/bin/gunicorn --workers 3 --bind unix:/run/gunicorn.sock blog.wsgi:application

[Install]
WantedBy=multi-user.target
